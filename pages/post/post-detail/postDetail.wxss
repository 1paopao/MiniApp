.detail-container {
	display: flex;
	flex-direction: column;
}

.header-image {
	width: 100%;
	height: 460rpx;
}

.audio {
	width: 100rpx;
	height: 100rpx;
	position: absolute;
	top: 218rpx;
	margin-top: -50rpx;
	left: 50%;
	margin-left: -50rpx;
	opacity: 0.6;
}

.author-date {
	flex-direction: row;
	margin-top: 30rpx;
	margin-left: 20rpx;
}

.avatar {
	width: 64rpx;
	height: 64rpx;
	vertical-align: middle;
}

.author {
	font-size: 30rpx;
	color: #666;
	margin-left: 10px;
	vertical-align: middle;
}

.simlar {
	color: #666;
	font-size: 24rpx;
	margin-left: 10px;
	vertical-align: middle;
}

.author-text {
	margin: 0 10px;
}

.title {
	margin: 10rpx 20rpx;
	font-size: 30rpx;
	font-weight: 700;
	letter-spacing: 4rpx;
}

.collection-share {
	margin: 10rpx 20rpx;
}

.right-link {
	float: right;
}
.right-link image {
	width: 85rpx;
	height: 85rpx;
}
.right-link .collection-image {
	margin-right: 15px;
}

.line {
	width: 100%;
	height: 1px;
	background-color: #ddd;
	position: relative;
	top: 44rpx;
	z-index: -2;
}

.detail {
	margin: 10px 20rpx;
	line-height:20px;
	letter-spacing: 2rpx;
	text-align: justify;
}

