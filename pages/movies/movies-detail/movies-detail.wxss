@import "../stars-template/stars-template.wxss";

.movies-box {
	display: flex;
	flex-direction: column;
}

.bg-pic {
	width: 100%;
	height: 320rpx;
	-webkit-filter: blur(10px); /* Chrome, Opera 模糊 */
	       -moz-filter: blur(10px);
	        -ms-filter: blur(10px);    
	            filter: blur(10px);
}

.head-img-hover {
	width: 100%;
	height: 320rpx;
	position: absolute;
	top: 0;
	left: 0;
	display:flex;
  flex-direction: column;
}

.main-title {
	margin-top: 50rpx;
	margin-left: 40rpx;
	font-size: 19px;
	color: #fff;
	font-weight: 700;
	letter-spacing: 2px;
}

.sub-title {
	font-size: 28rpx;
	color:#fff;
  margin-left: 40rpx;
  margin-top: 30rpx;
}

.like {
	display: flex;
	flex-direction: row;
	margin-left: 40rpx;
	margin-top: 30rpx;
}

.highlight-font{
  color: #f21146;
  font-size:22rpx;
  margin-right: 10rpx;
}

.plain-font{
  color: #666;
  font-size:22rpx;
  margin-right: 30rpx;
}

.movie-img {
	width: 175rpx;
	height: 238rpx;
	position: absolute;
	top: 160rpx;
	right: 30rpx;
}

.summary {
	margin-top: 40rpx;
	margin-left: 40rpx;
	color: #777;
}

.original-title {
	color: #1f3463;
	font-size: 24rpx;
	font-weight: bold;
	margin-bottom: 40rpx;
}

.flex-row {
	display:flex;
  flex-direction: row;
  margin-bottom: 10rpx;
}

.mark {
	margin-right: 30rpx;
  white-space:nowrap; /* 不换行 */
  color: #999999;
}

.hr {
	margin-top:45rpx;
	height:1px;
	width: 100%;
	background-color: #d9d9d9;
}

.synopsis {
	margin-top: 50rpx;
	margin-left:40rpx;
	display:flex;
	flex-direction: column;
}

.synopsis-font{
    color:#999;
}

.summary-content {
	margin-top: 20rpx;
	margin-right: 40rpx;
	line-height:40rpx;
	letter-spacing: 1px;
}

.cast {
	margin-left:40rpx;
	margin-top:50rpx;
	display:flex;
	flex-direction: column;
}

.cast-font {
	color: #999;
	margin-bottom: 40rpx;
}

.cast-imgs {
	width: 100%;
	white-space: nowrap;
}

.cast-container {
	display:inline-flex;
	flex-direction: column;
	margin-bottom: 50rpx;
	margin-right: 40rpx;
	width: 170rpx;
	text-align:center;
  white-space: normal; /* 自动处理换行 */
}

.cast-img{
    width: 170rpx;
    height: 210rpx;
}
.cast-name{
    margin: 10rpx auto 0;
}





