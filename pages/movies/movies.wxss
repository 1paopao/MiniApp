@import "movielist-template/movielist-template.wxss";
@import "moviegride-template/moviegride-template.wxss";

.container {
	background: #f2f2f2;
}

.list-template {
	background: #fff;
	margin-bottom: 30rpx;
}

.search {
	width: 100%;
	height: 80rpx;
	border: 1px solid #ddd;
	display: flex;
	flex-direction: row;
	overflow: hidden;
}

.search input {
	width: 100%;
	height: 80rpx;
	font-size: 28rpx;
}

.placeholder-style {
	color: #ccc;
}

.search-icon,.clear-icon {
	width: 80rpx;
	height: 80rpx;
	text-align: center;
	margin-top: 20rpx;
}

