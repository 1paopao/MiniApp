/* pages/form/form.wxss */
.form-container {
	width: 100%;
	padding: 30rpx 0;
}

.form-title {
	width: 30%;
	text-align: center;
	margin: 0 auto;
}

.title {
	font-size: 30rpx;
}

.line {
	width: 100%;
	height: 3px;
	background-color: #DDD;
	margin-bottom: 40rpx;
	margin-top: 30rpx;
}

form {
	display: block;
	padding: 0 30rpx;
}

.section {
	margin-bottom: 30rpx;
}

.section__title {
	margin-bottom: 16rpx;
}

input {
	border: 1px solid #ddd;
	border-radius: 8rpx;
	padding-left: 6rpx;
}

label {
	display: block;
}

button {
	margin-bottom: 10rpx;
}